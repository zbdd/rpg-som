            <string>if(obj_game_state.game_state == "inventory") {
    key_up =  keyboard_check_pressed(KEY_UP);
    key_down = -keyboard_check_pressed(KEY_DOWN);
    key_left = -keyboard_check_pressed(KEY_LEFT);
    key_right = keyboard_check_pressed(KEY_RIGHT);
    key_cancel = keyboard_check_pressed(KEY_INV);
    key_select = keyboard_check_pressed(KEY_INTERACT);
    
    MAX_RADIUS = 10 + 10 * obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected];
    angle = 360/obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected];
    
    //fancy shit to load the menu
    if (spawn == true) {
        if (radius &lt;= 0 &amp;&amp; obj_hero.spell != 0) rotate = round ((angle * obj_hero.spell) % 360);
        
        if (radius &lt; MAX_RADIUS) radius += ROTATE_SPEED/2;
        else if (radius &gt; MAX_RADIUS) radius = MAX_RADIUS;
        
        rotate = round ((rotate + ROTATE_SPEED) % 360);
            
        for (i = 0; i &lt; obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected]; i++) {
            original = angle * i;
            
            spr_x = round(obj_hero.x + radius * cos((original - rotate) * pi / 180));
            spr_y = round(obj_hero.y + radius * sin((original - rotate) * pi / 180));
                   
            if (!instance_exists(obj_inventory_control.items[obj_inventory_control.menu_selected, i])) instance_create(spr_x, spr_y, obj_inventory_control.items[obj_inventory_control.menu_selected, i]); 
            else {
                obj_inventory_control.items[obj_inventory_control.menu_selected, i].visible = true;
                obj_inventory_control.items[obj_inventory_control.menu_selected, i].x = spr_x;
                obj_inventory_control.items[obj_inventory_control.menu_selected, i].y = spr_y;
            }
        }  
        
        rotate_to = -1;
        if ((angle * obj_hero.spell - rotate) % 360 == 0) rotate_to = 0;   

        if (radius == MAX_RADIUS &amp;&amp; rotate_to == 0) {  
            spawn = false;
        } 
    } else {
        for(i = 0; i &lt; obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected]; i++) {
            original = angle * i;
                                    
            spr_x = obj_hero.x + radius * cos((original - rotate) * pi / 180);
            spr_y = obj_hero.y + radius * sin((original - rotate) * pi / 180);
        
            with(obj_inventory_control.items[obj_inventory_control.menu_selected, i]) {
                visible = true;
            } 
            //instance_create(spr_x, spr_y, obj_inventory_control.items[obj_inventory_control.menu_selected, i]);
            obj_inventory_control.items[obj_inventory_control.menu_selected, i].x = spr_x;
            obj_inventory_control.items[obj_inventory_control.menu_selected, i].y = spr_y;
        }  
        //show_debug_message(obj_inventory_control.items[obj_inventory_control.menu_selected, obj_hero.spell].amount); 
        selected_spell.x = obj_hero.x + radius;
        selected_spell.y = obj_hero.y;
        selected_spell.visible = true;
        
    }
        
    //control menu dial rotating direction
    if (abs(key_left) || key_right) {
        obj_hero.spell += key_left + key_right;
        obj_game_state.game_state = "inventory_rotating";

        if(obj_hero.spell &lt; 0) obj_hero.spell = obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected]-1; 
        else if(obj_hero.spell &gt; obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected]-1) obj_hero.spell = 0;    
    }
 
    //control moving between menus
    if (key_up || abs(key_down))  {   
        for (i = 0; i &lt; obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected]; i++) {
            with (obj_inventory_control.items[obj_inventory_control.menu_selected, i]) {
                    visible = false;
            } 
        }
        old_menu = obj_inventory_control.menu_selected;
        obj_inventory_control.menu_selected += key_up + key_down;
        spawn = true;
        
        if (obj_inventory_control.menu_selected &lt; 0) obj_inventory_control.menu_selected = obj_inventory_control.MENU_LEVELS-1;
        if (obj_inventory_control.menu_selected &gt; obj_inventory_control.MENU_LEVELS-1) obj_inventory_control.menu_selected = 0;
        
        if (obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected] &lt;= 0) obj_inventory_control.menu_selected = old_menu;
        else obj_hero.spell = 0;
    }
    
    //leave inventory and delete not required objects
    if (key_cancel || key_select ) {
        obj_game_state.game_state = "ego_control";  
        
        for (i = 0; i &lt; obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected]; i++) {
            obj_inventory_control.items[obj_inventory_control.menu_selected, i].visible = false;
        }
        selected_spell.visible = false
    }
}
//handle the rotating animation
if (obj_game_state.game_state == "inventory_rotating") {

    rotate = round((rotate + ((key_left + key_right) * ROTATE_SPEED)) % 360);

    for (i = 0; i &lt; obj_inventory_control.TOTAL_ITEMS[obj_inventory_control.menu_selected]; i++) {
        original = angle * i;
                            
        spr_x = obj_hero.x + radius * cos((original - rotate) * pi / 180);
        spr_y = obj_hero.y + radius * sin((original - rotate) * pi / 180);
                    
        obj_inventory_control.items[obj_inventory_control.menu_selected, i].x = spr_x;
        obj_inventory_control.items[obj_inventory_control.menu_selected, i].y = spr_y;
    }
        
    if ((abs(rotate) % angle) == 0) {  
        obj_game_state.game_state = "inventory"; 
    }
}
